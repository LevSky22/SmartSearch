{
    "manifest_version": 3,
    "name": "Smart Search Router",
    "description": "Use 'x' + query to route questions to Perplexity, keywords to Google.",
    "version": "1.0",
    "author": "Lev Jampolsky",
    "homepage_url": "https://x.com/LevJampolsky",
    "permissions": ["tabs"],
    "host_permissions": [
      "https://ipapi.co/*"
    ],
    "omnibox": {
      "keyword": "x"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  